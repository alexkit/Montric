 <div id="adminTabRightContent">
    <h1>{{id}}</h1>
    <table class="table">
    <tr>
        <td>Alert Plugin:</td>
        <td colspan="2">
            {{view Ember.Select classNames="input-medium" valueBinding="pluginName" contentBinding="controller.alertPlugins" optionLabelPath="content.id" optionValuePath="content.id"}}
        </td>
    </tr>
    <tr>
        <td>Recipients:</td>
        <td>
            {{input type=text valueBinding="controller.newRecipient" classNames="almostFillWidth"}}
        </td>
        <td><button class="btn btn-success" style="width: 100%;" {{action doAddRecipient}}>Add</button></td>
    </tr>
    <tr>
        <td colspan="3">
            <div style="max-height: 150px; max-height: 150px; overflow: scroll; width: 100%" class="azureBlueBackground azureBlueBorderThin">
                {{! view Montric.SelectableListView listItemsBinding="recipients" deleteAction="deleteSelectedRecipient" maxCharacters="120" selectedItemBinding="controller.selectedRecipient"}}
                {{multi-selectable-list nodes=recipients selectedNodes=selectedRecipients}}
            </div>
            <button {{action "doDeleteSelectedRecipients"}} class="btn btn-success" style="width: 100%;">Delete selected Recipients from Alert Recipient</button>
        </td>
    </tr>
    <tr class="footer">
        <td colspan="3"><button {{action doCommitAlertRecipient}} class="btn btn-primary" style="width: 100%;">Save Alert Recipient</button></td>
    </tr>
    </table>
</div>